{
	"name": "command-runner",
	"displayName": "Command Runner",
	"description": "Simple Command Runner for Visual Studio Code",
	"version": "0.0.1",
	"author": "Camillucci",
	"publisher": "Camillucci",
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:command-runner.run-command"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "command-runner.run-command",
				"title": "Command Runner: Run Command"
			}
		],
		"keybindings": [
			{
				"command": "command-runner.run-command",
				"key": "ctrl+shift+t",
				"mac": "ctrl+shift+t"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Command Runner Configuration",
			"properties": {
				"my-command-runner.commands": {
					"type": "array",
					"items": {
						"type": [
							"object"
						],
						"properties": {
							"name": {
								"type": "string",
								"description": "Name for the command and of the terminal."
							},
							"command": {
								"type": "string",
								"description": "The command to be executed in the terminal."
							},
							"path": {
								"type": "string",
								"description": "Starting path of the command."
							}
						}
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.68.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.2",
		"@vscode/test-electron": "^2.1.3"
	}
}